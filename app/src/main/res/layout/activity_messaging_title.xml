<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_20dp"
    tools:context=".activity.MessagingTitleActivity">



    <ImageButton
        android:id="@+id/beforebtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_left_arrow"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="notifications.messaging.title"
        android:textColor="@color/design_dark_default_color_background"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_24dp"/>

    <EditText
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="notifications.messaging.info"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_14dp"/>

</LinearLayout>