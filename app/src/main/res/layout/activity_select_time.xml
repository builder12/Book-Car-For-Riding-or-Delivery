    <ImageButton
        android:id="@+id/leftnav"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_left_arrow"
        android:scaleType="fitCenter"
        android:layout_marginTop="@dimen/text_size_20sp"
        android:layout_marginLeft="@dimen/text_size_20sp"/>




    <TextView
        android:layout_below="@id/leftnav"
        android:id="@+id/leavetext"
        android:textSize="@dimen/text_size_20sp"
        android:textStyle="bold"
        android:textColor="#0F0E0E"
        android:paddingTop="@dimen/dimen_8dp"
        android:paddingBottom="@dimen/dimen_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:text="What time do you want to leave?"
        android:paddingStart="@dimen/dimen_24dp"
        android:paddingEnd="@dimen/dimen_24dp"/>


    <TextView
        android:id="@+id/timecalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/leavetext"
        android:layout_marginLeft="@dimen/text_size_2sp"
        android:layout_marginTop="@dimen/text_size_20sp"
        android:background="@drawable/timecalculate_real"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="8:00"
        android:textColor="@color/material_deep_teal_500"
        android:textSize="@dimen/dimen_48dp"
        android:textStyle="bold" />





